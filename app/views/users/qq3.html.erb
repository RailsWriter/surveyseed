<!DOCTYPE html>
<html lang="en">

	<head>
		<title>Users HTML5 theme</title>
		<meta charset="utf-8" />	
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

	<body class="body">		
		<div class="header">
			<center>
				<h1>Country</h1>
			</center>
		</header>
		
		<div class="content">
			<center>
				<p>In which country do you live?</p>
			</center>
				<%= form_tag("country", method: "post") do %>
				<fieldset>
				<div class="mytags">
					<label>
						<%= radio_button_tag 'country', '5' %>
				  		Australia
					</label><br>
					<label>
						<%= radio_button_tag 'country', '6' %>
				  		Canada
					</label><br>
					<label>
						<%= radio_button_tag 'country', '7' %>
				  		India
					</label><br>
					<label>						
						<%= radio_button_tag 'country', '9' %>
				  		USA
					</label><br>
					<label>						
						<%= radio_button_tag 'country', '0' %>
				  		None of the above
					</label><br><br>
				</div>

				<div class="myinput">
					<center>
						<%= submit_tag "Next" %>
					</center>
				</div>
				
			</fieldset>
				<% end %>
		</content>
				
		<footer class="footer">
			<center>
				<%= image_tag image_path('KetsciLogoSm.png') %>
			</center>
		</footer>
	</body>	
</html>