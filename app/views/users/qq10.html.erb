<!DOCTYPE html>
<html lang="en">

	<head>
		<title>Users HTML5 theme</title>
		<meta charset="utf-8" />	
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

	<body class="body">		
		<div class="header">
			<center>
				<h1>Employment</h1>
			</center>
		</header>
		
		<div class="content">
			<center>
				<p>What is your current employment status?</p>
			</center>
				<%= form_tag("employment", method: "post") do %>
				<fieldset>
					<div class="mybiglistinput">
					
					<label>
					<%= radio_button_tag 'employment', '1' %>
				  		Employed full-time
					</label><br>
					<label>
					<%= radio_button_tag 'employment', '2' %>
				  		Employed part-time
					</label><br>
					<label>
					<%= radio_button_tag 'employment', '3' %>
				  		Self-employed full-time
					</label><br>
					<label>						
					<%= radio_button_tag 'employment', '4' %>
				  		Self-employed part-time
					</label><br>
					<label>						
					<%= radio_button_tag 'employment', '5' %>
				  		Active military
					</label><br>
					<label>
					<%= radio_button_tag 'employment', '6' %>
				  		Inactive military/Veteran
					</label><br>
					<label>
					<%= radio_button_tag 'employment', '7' %>
				  		Temporarily unemployed
					</label><br>
					<label>
					<%= radio_button_tag 'employment', '8' %>
				  		Full-time homemaker
					</label><br>
					<label>
					<%= radio_button_tag 'employment', '9' %>
				  		Retired
					</label><br>
					<label>						
					<%= radio_button_tag 'employment', '10' %>
				  		Student
					</label><br>
					<label>						
					<%= radio_button_tag 'employment', '11' %>
				  		Disabled
					</label><br>					
					<label>
					<%= radio_button_tag 'employment', '12' %>
				  		Prefer not to answer
					</label><br><br>
				
				</div>
					<div class="myinput">
						<center>
							<%= submit_tag "Next" %>
						</center>
					</div>
				</fieldset>
				<% end %>
		</content>
				
		<footer class="footer">
			<center>
				<%= image_tag image_path('KetsciLogoSm.png') %>
			</center>
		</footer>
	</body>	
</html>