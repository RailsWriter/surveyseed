				<fieldset>
				<div class="mybiglistinput">
					<%= radio_button_tag 'hhi', '1' %>
					<%= label_tag(:hhi, "Less than ₹300,000") %><br>
					<%= radio_button_tag 'hhi', '2' %>
					<%= label_tag(:hhi, "₹300,000 to ₹399,999") %><br>
					<%= radio_button_tag 'hhi', '3' %>
					<%= label_tag(:hhi, "₹400,000 to ₹499,999") %><br>
					<%= radio_button_tag 'hhi', '4' %>
					<%= label_tag(:hhi, "₹500,000 to ₹599,999") %><br>
					<%= radio_button_tag 'hhi', '5' %>
					<%= label_tag(:hhi, "₹600,000 to ₹699,999") %><br>
					<%= radio_button_tag 'hhi', '6' %>
					<%= label_tag(:hhi, "₹700,000 to ₹799,999") %><br>
					<%= radio_button_tag 'hhi', '7' %>
					<%= label_tag(:hhi, "₹800,000 to ₹899,999") %><br>
					<%= radio_button_tag 'hhi', '8' %>
					<%= label_tag(:hhi, "₹900,000 to ₹999,999") %><br>
					<%= radio_button_tag 'hhi', '9' %>
					<%= label_tag(:hhi, "₹1 to ₹1.19 million") %><br>
					<%= radio_button_tag 'hhi', '10' %>
					<%= label_tag(:hhi, "₹1.20 to ₹1.49 million") %><br>
					<%= radio_button_tag 'hhi', '11' %>
					<%= label_tag(:hhi, "₹1.5 to ₹1.69 million") %><br>
					<%= radio_button_tag 'hhi', '12' %>
					<%= label_tag(:hhi, "₹1.70 to ₹1.99 million") %><br>
					<%= radio_button_tag 'hhi', '13' %>
					<%= label_tag(:hhi, "₹2 to ₹2.49 million") %><br>
					<%= radio_button_tag 'hhi', '14' %>
					<%= label_tag(:hhi, "₹2.50 to ₹2.99 million") %><br>
					<%= radio_button_tag 'hhi', '15' %>
					<%= label_tag(:hhi, "₹3 to ₹3.49 million") %><br>
					<%= radio_button_tag 'hhi', '16' %>
					<%= label_tag(:hhi, "₹3.50 to ₹3.99 million") %><br>
					<%= radio_button_tag 'hhi', '17' %>
					<%= label_tag(:hhi, "₹4 million and above") %><br>
					<%= radio_button_tag 'hhi', '18' %>
					<%= label_tag(:hhi, "Prefer not to answer") %><br><br>
					</div>
					<div class="myinput">
					<center>
					<%= submit_tag "Next" %>
					</center>
					</div>
					</fieldset>
				<% end %>
		</content>
				
		<footer class="footer">
			<center>
				<%= image_tag image_path('KetsciLogoSm.png') %>
			</center>
		</footer>
	</body>	
</html>