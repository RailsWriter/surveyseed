<!DOCTYPE html>
<html lang="en">
  <% provide(:title, "LOG IN") %>
  <center><h1>LOG IN</h1></center>
  <p></p>
  <br></br>
  <div class="row">
    <div class="col-md-10 col-md-offset-10">
      <%= form_for(:networks, url: networks_create_path) do |f| %>
        <center>
          <div class="myemailinput">
            <h2><%= f.label :email %></h2>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <p></p>
          <div class="myemailinput">
            <h2><%= f.label :password %></h2>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <%= f.hidden_field :session_id, value: session.id %>

          <div class="myinput">
            <h2><%= f.submit "Log in", class: "myinput" %></h2>
          </div>
          <p><%= alert %></p>
          <p></p>
          <a href="mailto:projectsmanagement@ketsci.com"> Contact</a> us in case of any problems logging in.
          <p></p>
        </center>
      <% end %>
    </div>
  </div>

  <br>
      
  <footer class="footer">
    <center>
      <%= image_tag image_path('KetsciLogoSm.png') %>
    </center>
  </footer>
</html>